{
    "name": "babdev/babdev.com",
    "description": "The babdev.com website",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-hash": "*",
        "composer-runtime-api": "^2.0",
        "babdev/laravel-breadcrumbs": "^2.0@dev",
        "blade-ui-kit/blade-ui-kit": "0.6.2",
        "filament/filament": "3.2.95",
        "guzzlehttp/guzzle": "7.9.0",
        "http-interop/http-factory-guzzle": "1.2.0",
        "knplabs/github-api": "3.14.1",
        "laravel/framework": "11.16.0",
        "lcobucci/jwt": "5.3.0",
        "league/commonmark": "2.4.2",
        "mohamedsabil83/filament-forms-tinyeditor": "2.3.2",
        "spatie/laravel-feed": "4.4.0",
        "spatie/laravel-google-fonts": "1.4.1",
        "spatie/laravel-sitemap": "7.2.1",
        "spatie/laravel-sluggable": "3.6.0",
        "spatie/packagist-api": "2.1.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "1.2.0",
        "fakerphp/faker": "1.23.1",
        "larastan/larastan": "2.9.8",
        "laravel/telescope": "5.1.1",
        "mockery/mockery": "1.6.12",
        "nunomaduro/collision": "8.3.0",
        "phpstan/extension-installer": "1.4.1",
        "phpstan/phpstan": "1.11.7",
        "phpstan/phpstan-mockery": "1.1.2",
        "phpstan/phpstan-phpunit": "1.4.0",
        "phpunit/phpunit": "11.2.8",
        "rector/rector": "1.2.1",
        "spatie/laravel-ignition": "2.8.0"
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "BabDev\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi",
            "@php artisan filament:upgrade"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.17"
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
