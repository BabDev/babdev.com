{
    "name": "babdev/babdev.com",
    "description": "The babdev.com website",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-hash": "*",
        "composer-runtime-api": "^2.0",
        "babdev/laravel-breadcrumbs": "2.0.0",
        "babdev/laravel-server-push-manager": "2.2.0",
        "blade-ui-kit/blade-ui-kit": "0.4.0",
        "camya/filament-title-with-slug": "0.5.6",
        "elhebert/laravel-sri": "dev-master",
        "filament/filament": "2.17.42",
        "guzzlehttp/guzzle": "7.6.1",
        "http-interop/http-factory-guzzle": "1.2.0",
        "knplabs/github-api": "3.11.0",
        "laravel/framework": "10.11.0",
        "lcobucci/jwt": "5.0.0",
        "league/commonmark": "2.4.0",
        "mohamedsabil83/filament-forms-tinyeditor": "1.7.2",
        "spatie/laravel-feed": "4.2.1",
        "spatie/laravel-google-fonts": "1.2.3",
        "spatie/laravel-sitemap": "6.3.0",
        "spatie/laravel-sluggable": "3.4.2",
        "spatie/packagist-api": "2.1.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "0.20.0",
        "fakerphp/faker": "1.22.0",
        "laravel/telescope": "4.14.2",
        "mockery/mockery": "1.5.1",
        "nunomaduro/collision": "7.5.2",
        "nunomaduro/larastan": "2.6.0",
        "phpstan/extension-installer": "1.3.0",
        "phpstan/phpstan": "1.10.15",
        "phpstan/phpstan-mockery": "1.1.1",
        "phpstan/phpstan-phpunit": "1.3.11",
        "phpunit/phpunit": "10.1.3",
        "rector/rector": "0.16.0",
        "spatie/laravel-ignition": "2.1.2"
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "BabDev\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi",
            "@php artisan filament:upgrade"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.5"
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
