{
    "private": true,
    "engines": {
        "node": ">=12.13.0",
        "npm": ">=6.12.0"
    },
    "browserslist": [
        ">= 0.5%, last 2 major versions, not dead, Chrome >= 60, Firefox >= 60, not Edge < 79, Firefox ESR, iOS >= 10, Safari >= 10, Android >= 6, not Explorer <= 11"
    ],
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build-nova-ckeditor4-field": "cd nova-components/NovaCKEditor4Field && npm run dev",
        "build-nova-ckeditor4-field-prod": "cd nova-components/NovaCKEditor4Field && npm run prod"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.1",
        "@popperjs/core": "^2.6.0",
        "bootstrap": "^5.0.0-beta1",
        "highlight.js": "^10.5.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "laravel-mix": "^6.0.9",
        "laravel-mix-purgecss": "^6.0.0",
        "path": "^0.12.7",
        "postcss": "^8.2.4",
        "postcss-import": "^14.0.0",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.32.2",
        "sass-loader": "^10.1.0",
        "vue-template-compiler": "^2.6.12"
    }
}
