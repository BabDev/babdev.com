{
    "private": true,
    "engines": {
        "node": ">=16.13.0",
        "npm": ">=8.1.0"
    },
    "browserslist": [
        ">= 0.5%, last 2 major versions, not dead, not Explorer <= 11"
    ],
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build-tinymce-field": "cd nova-components/TinyMCEField && npm run dev",
        "build-tinymce-field-prod": "cd nova-components/TinyMCEField && npm run prod"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "6.3.0",
        "@popperjs/core": "2.11.6",
        "bootstrap": "5.2.3",
        "highlight.js": "11.7.0",
        "highlightjs-blade": "0.1.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-methods": "7.18.6",
        "core-js": "3.29.1",
        "laravel-mix": "6.0.49",
        "laravel-mix-purgecss": "6.0.0",
        "laravel-mix-sri": "1.0.7",
        "path": "0.12.7",
        "postcss": "8.4.21",
        "postcss-import": "15.1.0",
        "resolve-url-loader": "5.0.0",
        "sass": "1.59.3",
        "sass-loader": "13.2.0"
    }
